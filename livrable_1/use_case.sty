% Header du use case
\newenvironment{usecase}[1]{%
	\noindent\begin{tabular}{|p{.65\textwidth}|p{.30\textwidth}|}
	\hline
	\ucprojectname & Version : \ucversion\\
	\hline
	Spécification de cas d'utilisation : #1 & Date : 01/11/10 \\
	\hline
	\end{tabular}\\
